<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
    <!-- 指明满足“/*”的页面，将被“/WEB-INF/pages/derorator/decorator.jsp”所装饰 -->
    <mapping path="/*" decorator="/decorator"/>
    <!-- 指明满足“/login.jsp*”的页面，将被排除，不被装饰 -->

    <!-- <mapping path="/login.jsp" exclue="true"/>-->
    <!--<mapping path="/hiveview-launcher/" exclue="true"/>-->
    <mapping path="/decorator" exclue="true"/>
    <mapping path="/res/*" exclue="true"/>

    <content-processor>
        <tag-rule-bundle class="cn.com.hiveview.launcher.utils.MyTagRuleBundle"/>
    </content-processor>
</sitemesh>